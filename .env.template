# Environment Variables Template
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600

# MongoDB Configuration
MONGO_URI=mongodb://mongodb:27017/coreconnect
MONGO_DBNAME=coreconnect

# For local development (without Docker)
# MONGO_URI=mongodb://localhost:27017/coreconnect_dev

# Production MongoDB (update with your production MongoDB URI)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/coreconnect?retryWrites=true&w=majority
