[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    __pycache__,
    .git,
    .venv,
    venv,
    env,
    migrations,
    .pytest_cache
per-file-ignores =
    __init__.py:F401
    tests/test_auth_enhanced.py:E402
    tests/test_mongodb.py:E402
    backend/tests/test_auth_enhanced.py:E402
    backend/tests/test_mongodb.py:E402
